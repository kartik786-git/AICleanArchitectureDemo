@model AICleanArchitectureDemo.WebMvc.Models.ProductsViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 fw-bold text-primary">
                <i class="fas fa-box me-3"></i>Our Products
            </h1>
            <p class="lead text-muted">Discover our amazing collection</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-filter me-2"></i>Filter by Category
                    </h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="@Url.Action("Index", "Products")"
                           class="btn @(Model.SelectedCategoryId == null ? "btn-primary" : "btn-outline-secondary")">
                            <i class="fas fa-th-large me-1"></i>All Categories
                        </a>
                        @foreach (var category in Model.Categories)
                        {
                            <a href="@Url.Action("Index", "Products", new { categoryId = category.Id })"
                               class="btn @(Model.SelectedCategoryId == category.Id ? "btn-primary" : "btn-outline-primary")">
                                @category.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Products.Any())
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="card shadow-sm">
                    <div class="card-body py-5">
                        <i class="fas fa-search fa-4x text-muted mb-3"></i>
                        <h3 class="text-muted">No products found</h3>
                        <p class="text-muted">Try selecting a different category or check back later.</p>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                            <i class="fas fa-refresh me-2"></i>Show All Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="product-card h-100">
                        <div class="product-image">
                            <i class="fas fa-image fa-3x"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">@product.Description</p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="product-price">$@product.Price</span>
                                    <small class="text-muted">
                                        <i class="fas fa-warehouse me-1"></i>@product.StockQuantity in stock
                                    </small>
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="@Url.Action("Details", "Products", new { id = product.Id })"
                                       class="btn btn-outline-primary flex-fill">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                    <form method="post" action="@Url.Action("AddToCart", "Products")" class="flex-fill">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
