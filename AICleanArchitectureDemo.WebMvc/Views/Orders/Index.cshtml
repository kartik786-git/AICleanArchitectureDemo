@model IEnumerable<AICleanArchitectureDemo.Application.DTOs.OrderDto>
@{
    ViewData["Title"] = "Order History";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 fw-bold text-primary">
                <i class="fas fa-history me-3"></i>Order History
            </h1>
            <p class="lead text-muted">Track and manage your orders</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm text-center">
                    <div class="card-body py-5">
                        <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">No orders found</h3>
                        <p class="text-muted mb-4">You haven't placed any orders yet. Start shopping to see your order history here.</p>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-receipt me-2"></i>Order #@order.Id
                            </h5>
                            <span class="badge bg-light text-dark">@order.Status</span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="row mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Order Date</small>
                                    <div class="fw-bold">@order.OrderDate.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@order.OrderDate.ToString("HH:mm")</small>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Total Amount</small>
                                    <div class="fw-bold text-success fs-5">$@order.TotalAmount</div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted">Customer Email</small>
                                <div>@order.CustomerEmail</div>
                            </div>
                            <div class="mt-auto">
                                <a href="@Url.Action("Details", "Orders", new { id = order.Id })" class="btn btn-primary w-100">
                                    <i class="fas fa-eye me-2"></i>View Details & Tracking
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
