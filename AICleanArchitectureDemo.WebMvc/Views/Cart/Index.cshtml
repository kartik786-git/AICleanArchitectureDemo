@model AICleanArchitectureDemo.WebMvc.Models.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1 class="display-4 fw-bold text-primary">
                <i class="fas fa-shopping-cart me-3"></i>Shopping Cart
            </h1>
            <p class="lead text-muted">Review your items and proceed to checkout</p>
        </div>
    </div>

    @if (!Model.CartItems.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm text-center">
                    <div class="card-body py-5">
                        <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
                        <h3 class="text-muted mb-3">Your cart is empty</h3>
                        <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-bag me-2"></i>Start Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Cart Items
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="border-bottom p-3">
                                <div class="row align-items-center">
                                    <div class="col-md-2 text-center">
                                        <div class="bg-light rounded p-3">
                                            <i class="fas fa-box fa-2x text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="fw-bold mb-1">@item.ProductName</h6>
                                        <small class="text-muted">Unit Price: $@item.ProductPrice</small>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <span class="badge bg-secondary fs-6">Qty: @item.Quantity</span>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <span class="fw-bold text-primary">$@(item.Quantity * item.ProductPrice)</span>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <button class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-calculator me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal (@Model.CartItems.Count item(s)):</span>
                            <span class="fw-bold">$@Model.Total</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping:</span>
                            <span class="text-success">Free</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="fw-bold">Total:</span>
                            <span class="fw-bold text-primary fs-5">$@Model.Total</span>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <form method="post" action="@Url.Action("Checkout", "Cart")">
                            <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
                                <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                            </button>
                        </form>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary w-100">
                            <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
